{
  "name": "telegram-invoice-bot",
  "version": "1.0.0",
  "description": "Telegram bot for generating invoice PDFs with Telegram Stars monetization",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
