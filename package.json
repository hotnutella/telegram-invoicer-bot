{
  "name": "telegram-invoice-bot",
  "version": "1.0.0",
  "description": "Telegram bot for generating invoice PDFs with Telegram Stars monetization",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "build": "tsc",
    "test": "jest",
    "migrate": "ts-node src/scripts/migrate-to-supabase.ts",
    "migrate-pdfs": "ts-node src/scripts/migrate-pdfs-to-supabase.ts",
    "test-supabase": "ts-node src/scripts/test-supabase-connection.ts",
    "setup-supabase": "ts-node src/scripts/setup-supabase.ts",
    "setup-manual": "ts-node src/scripts/setup-supabase-manual.ts",
    "create-schema": "ts-node src/scripts/create-schema.ts",
    "create-db": "ts-node src/scripts/create-db-postgres.ts",
    "docker:build": "docker build -t telegram-invoice-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.66.0",
    "better-sqlite3": "^11.0.0",
    "pdf-lib": "^1.17.1",
    "dotenv": "^16.4.5",
    "@supabase/supabase-js": "^2.45.4",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/better-sqlite3": "^7.6.10",
    "@types/pg": "^8.10.2",
    "typescript": "^5.5.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}