  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/node-telegram-bot-api": "^0.64.7",
    "typescript": "^5.5.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}